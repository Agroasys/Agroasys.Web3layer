{
  "name": "oracle",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && npm run copy-files",
    "copy-files": "mkdir -p dist/database && cp src/database/schema.sql dist/database/",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "test": "jest --runInBand",
    "lint": "tsc --noEmit",
    "build:sdk": "npm --prefix ../sdk run build",
    "prebuild": "npm run build:sdk",
    "prelint": "npm run build:sdk"
  },
  "dependencies": {
    "express": "^5.2.1",
    "cors": "^2.8.6",
    "helmet": "^8.1.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.4.0",
    "pg": "^8.18.0",
    "@agroasys/sdk": "^1.0.0",
    "@agroasys/notifications": "^1.0.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "typescript": ">=4.5.0",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6"
  },
  "license": "Apache-2.0"
}
